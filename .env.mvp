# MVP LAUNCH ENVIRONMENT - FIREBASE + RAILWAY INTEGRATION
# Copy this to .env for production use

# =================================================
# FIREBASE CONFIGURATION (Required for MVP)
# =================================================
# Get these from Firebase Console after creating project
FIREBASE_PROJECT_ID=agricultural-intelligence-platform
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_SERVICE_ACCOUNT_KEY=./firebase-service-account.json

# =================================================
# RAILWAY CONFIGURATION (Required for MVP)
# =================================================
# Automatically provided by Railway deployment
# DATABASE_URL=postgresql://user:password@host:port/database
# Or manually set for development:
RAILWAY_DATABASE_URL=your_railway_database_url_here

# =================================================
# GOOGLE AI CONFIGURATION (Required)
# =================================================
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
GEMINI_API_KEY=${GOOGLE_AI_API_KEY}

# =================================================
# CORE SYSTEM CONFIG
# =================================================
APP_NAME=Agricultural Intelligence Platform MVP
APP_VERSION=2.0.0
DEBUG=false
LOG_LEVEL=INFO

# =================================================
# ETHICAL AI FRAMEWORK
# =================================================
USE_ETHICAL_FRAMEWORK=true
CHEMICAL_LAST_ENFORCEMENT=true
SAFETY_INSTRUCTIONS_MANDATORY=true

# =================================================
# FALLBACK SETTINGS (Auto-detect when services down)
# =================================================
USE_SQLITE_FALLBACK=true
SQLITE_DATABASE_PATH=./agriculture_platform.db
USE_MOCK_FIREBASE=true

# =================================================
# CONSULTATION SETTINGS
# =================================================
MAX_CONSULTATIONS_PER_HOUR=10  # Per farmer per hour
CONSULTATION_TIMEOUT_SECONDS=30
RESPONSE_CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600

# =================================================
# MONITORING & ALERTS
# =================================================
ENABLE_HEALTH_CHECKS=true
MONITOR_DATABASE_CONNECTIONS=true
ALERT_ON_SERVICE_DOWN=true

# =================================================
# MVP LAUNCH SETTINGS
# =================================================
MVP_MODE=true
LAUNCH_DATE=2025-10-06
TARGET_USERS_INITIAL=1000
FREE_CONSULTATIONS=10  # Per farmer initially

# =================================================
# EXTERNAL API KEYS (Optional for MVP)
# =================================================
# Google Earth Engine (for advanced satellite features)
GEE_SERVICE_ACCOUNT_KEY=./gee-service-account.json

# Weather API (OpenWeather fallback)
OPENWEATHER_API_KEY=your_openweather_api_key_here

# WhatsApp Business API (for later)
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
